<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:background">@drawable/ic_rec_rounded_12</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="TextView" />

    <style name="TextView.TitleName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="TextView.Description">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="TextView.Login">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="TextView.Or">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:layout_marginStart">@dimen/dp_6</item>
    </style>

    <style name="TextView.Signup">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:layout_marginStart">@dimen/dp_6</item>
    </style>

    <style name="TextView.SignupButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:layout_marginStart">@dimen/dp_6</item>
    </style>

    <style name="TextView.RecoverPassword">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

</resources>
